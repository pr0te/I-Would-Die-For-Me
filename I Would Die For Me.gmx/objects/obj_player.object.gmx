            <string>// Key Checks
keyL = keyboard_check(vk_left);
keyR = keyboard_check(vk_right);
keyU = keyboard_check(vk_up);
keyD = keyboard_check(vk_down);

if (keyboard_check_pressed(vk_right))
    keyPriority = 1;
else if (keyboard_check_pressed(vk_left))
    keyPriority = 0;

if (holdingUp &amp;&amp; !keyU)
    holdingUp = false;

// Gravity
if (!grounded) {
    if (wallgrinding) max_spd = max_grindspd;
    else max_spd = max_fallspd;
    if (yspd + fallspd_step &gt; max_spd)
        yspd = max_spd;
    else
        yspd += fallspd_step;    
}

// Wallgrinding
wallgrinding = (!grounded &amp;&amp; (place_meeting(x+xspd_step+1,y,obj_wall) || place_meeting(x-xspd_step,y,obj_wall)))

// Movement
if (keyU &amp;&amp; !holdingUp) {
    if (grounded) {
        yspd = jumpspd;
        grounded = false;
    }
    if (wallgrinding) {
        yspd = -wj_height;
        if (place_meeting(x+1+xspd_step,y,obj_wall))
            xspd = -wj_dist;
        else if (place_meeting(x-1-xspd_step,y,obj_wall))
            xspd = wj_dist;
        wallgrinding = false;
    }
}

if (keyL &amp;&amp; keyR) {
    if (keyPriority == 0) {
        if (!place_meeting(x-xspd_step,y,obj_wall)) {
            if (xspd - xspd_step &gt;= -max_xspd)
                xspd -= xspd_step;
        }
    } else {
        if (!place_meeting(x+xspd_step+1,y,obj_wall)) {
            if (xspd + xspd_step &lt;= max_xspd)
                xspd += xspd_step;
        }
    }
} else if (keyL) {
    if (!place_meeting(x-xspd_step,y,obj_wall)) {
        if (xspd - xspd_step &gt;= -max_xspd)
            xspd -= xspd_step;
    }
} else if (keyR) {
    if (!place_meeting(x+xspd_step+1,y,obj_wall)) {
        if (xspd + xspd_step &lt;= max_xspd)
            xspd += xspd_step;
    }
}

// Decelerate
if (xspd != 0) {
    if (keyL + keyR == 0 || abs(xspd) &gt; max_xspd)
        xspd *= xspd_decel;
    if (keyL + keyR == 0 &amp;&amp; abs(xspd) &lt; 0.4)
        xspd = 0;
}

// X Collision
if (xspd &lt; 0 &amp;&amp; place_meeting(x+xspd,y,obj_wall)) {
    for (i = 1; i &lt; -xspd; ++i)
        if (!place_meeting(x-1,y,obj_wall)) {
            x--;
            realx = x;
        }
    xspd = 0;
} else if (xspd &gt; 0 &amp;&amp; place_meeting(x+xspd+1,y,obj_wall)){
    for (i = 1; i &lt;= xspd; ++i)
        if (!place_meeting(x+1,y,obj_wall)) {
            x++;
            realx = x;
    }
    xspd = 0;
}
    
// Move Player X
realx += xspd;
x = round(realx);
    
// Y Collision
if (yspd &gt; 0) {
    if (place_meeting(x,y+yspd+1,obj_wall)) {
        for (i = 1; i &lt;= yspd; ++i)
            if (!place_meeting(x,y+1,obj_wall)) {
                y++;
                realy = y;
            }
        grounded = true;
        wallgrinding = false;
        yspd = 0;
    }
} else if (yspd &lt; 0) {
    if (place_meeting(x,y+yspd,obj_wall)) {
        for (i = 1; i &lt; -yspd; ++i)
            if (!place_meeting(x,y-1,obj_wall)) {
                y--;
                realy = y;
            }
        yspd = 0;
    }
}

if (grounded &amp;&amp; !place_meeting(x,y+1,obj_wall))
    grounded = false;
    
// Move Player Y
realy += yspd;
y = round(realy);

// Spike
if (place_meeting(x,y,obj_spike)) {
    var dead = instance_create(x-width/2,y-height/2,obj_dead);
    dead.realx = realx;
    dead.realy = realy;
    dead.x = x;
    dead.y = y;
    dead.xspd = xspd;
    dead.yspd = yspd;
    realx = startx;
    realy = starty;
    x = startx;
    y = starty;
}
